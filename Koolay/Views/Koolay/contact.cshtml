<template id="slide-template">
    <div class="swiper-slide">
        <div class="form-container">
            <fieldset>
                <legend>{title}</legend>
                <p>{span}</p>
                {field}
            </fieldset>
            <input id="ajaxTikla" type="button" value="OK" class="btn next-button">
        </div>
    </div>
</template>

<template id="slide-start-template">
